    rule: regenerate
    src:
      - $srcdir/build.ninja.yaml.erb.in
<% unless File.directory?('data') %>
  data:
    rule: ln_s
    src:
      - $srcdir/data
<% end %>
  SoundClient.app/Coutents/Resources/sound_client.icns:
    rule: icns
    implicit:
<% Dir.glob("@srcdir@/wx_sample.iconset/*.png").each do |file| %>
      - <%= file %>
<% end %>
